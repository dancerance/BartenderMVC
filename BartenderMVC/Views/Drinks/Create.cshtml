                @Html.EditorFor(model => model.drinkDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.drinkDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.drinkPrice, htmlAttributes: new { @class = "control-label col-md-2" })
