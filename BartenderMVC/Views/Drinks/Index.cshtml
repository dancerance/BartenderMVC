@model IEnumerable<BartenderMVC.Models.Drink>


@{
    ViewBag.Title = "Drink Manager";
}

<h2>Drink Manager</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.drinkName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.drinkDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.drinkPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.drinkName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.drinkDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.drinkPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.drinkID }) |
            @Html.ActionLink("Details", "Details", new { id=item.drinkID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.drinkID })
        </td>
    </tr>
}

</table>
